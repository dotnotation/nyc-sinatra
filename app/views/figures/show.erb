<h1><%=@figure.name%></h1>

<h4>Landmarks:</h4>
<ul>
  <%@figure.landmarks.each do |landmark|%>
  <li><%=landmark.name%></li>
  <li><%= landmark.year_completed%></li>
  <%end%>
</ul>

<h4>Titles:</h4>
<ul>
  <%@figure.titles.each do |title|%>
  <li><%=title.name%></li>
  <%end%>
</ul>

<a class="button" href="/figures/<%= @figure.id %>/edit">Edit this figure</a>
<a class="button" href="/landmarks">Landmarks</a>
