<h2> Create New Figure </h2>
<form action="/figures" method="POST">
    <label>Name:</label>
    <input type="text" id="figure_name" name="figure[name]" placeholder="name"><br> 
  
  <label><h3>Landmarks:</h3></label>
    <% Landmark.all.each do |landmark| %>
        <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>">
        <label><%= landmark.name %></label><br>
    <% end %>
    <br>

  <label><h3>Titles:</h3></label>
    <% Title.all.each do |title| %>
        <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>">
        <label><%= title.name %></label><br>
    <% end %>
    <br>


  <label><h3>Create New Landmark</h3>
    <label>Name: </label>
    <br>
    <input type="text" id="new_landmark" name="landmark[name]">
    <br>
    <label>Year: </label>
    <br>
    <input type="text" id="new_landmark_year" name="landmark[year_completed]">
    <br>

    <label><h3>Create New Title</h3></label>
        <br>
        <input type="text" id="new_title" name="title[name]">
        <br><br>

  <input type="submit" value="Create New Figure">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
